[Unit]
Description=Nox Body Controller (PiDog)
After=network.target

[Service]
EnvironmentFile=/home/pidog/nox.env
Type=simple
User=pidog
WorkingDirectory=/home/pidog
ExecStart=/usr/bin/python3 -u /home/pidog/nox_daemon.py
Restart=on-failure
RestartSec=5
Environment=PATH=/home/pidog/.local/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONUNBUFFERED=1
Environment=SDL_AUDIODRIVER=alsa
Environment=AUDIODEV=plughw:3,0

[Install]
WantedBy=multi-user.target
