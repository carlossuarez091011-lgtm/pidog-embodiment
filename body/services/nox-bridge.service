[Unit]
Description=Nox Brain Bridge (PiDog HTTP API)
After=nox-body.service
Requires=nox-body.service

[Service]
EnvironmentFile=/home/pidog/nox.env
Type=simple
User=pidog
WorkingDirectory=/home/pidog
ExecStart=/usr/bin/python3 -u /home/pidog/nox_brain_bridge.py
Restart=on-failure
RestartSec=5
Environment=PATH=/home/pidog/.local/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONUNBUFFERED=1
#Environment=NOX_NO_AUTO=1

[Install]
WantedBy=multi-user.target
